      /! Basic Inputs start
      section#basic-input
        .row
          .col-md-12
            .card
              .card-header
                h4.card-title Basic Inputs
              .card-content
                .card-body
                  .row
                    .col-md-6
                      fieldset.form-group
                        label for="basicInput"  Basic Input
                        input#basicInput.form-control placeholder=("Enter email") type="text" /
                      fieldset.form-group
                        label for="helpInputTop"  Input text with help
                        small.text-muted
                          | eg.
                          i someone@example.com
                        input#helpInputTop.form-control type="text" /
                      fieldset.form-group
                        label for="helperText"  With Helper Text
                        input#helperText.form-control placeholder="Name" type="text" /
                        p
                          small.text-muted Find helper text here for given textbox.
                    .col-md-6
                      fieldset.form-group
                        label for="disabledInput"  Disabled Input
                        input#disabledInput.form-control disabled="disabled" placeholder=("Disabled Text") type="text" /
                      fieldset.form-group
                        label for="disabledInput"  Readonly Input
                        input#readonlyInput.form-control readonly="readonly" type="text" value=("You can't update me :P") /
                      fieldset.form-group
                        label for="disabledInput"  Static Text
                        p#staticInput.form-control-static email@pixinvent.com
      section#input-validation
        .row
          .col-12
            .card
              .card-header
                h4.card-title Input Validation States
              .card-content
                .card-body
                  .row
                    .col-12
                      p
                        | You can indicate invalid and valid form fields with
                        code .is-invalid
                        | and
                        succeed . do
                          code .is-valid
                        code .invalid-feedback
                        | is also supported with these classes.
                    .col-sm-6
                      label for="valid-state"  Valid State
                      input#valid-state.form-control.is-valid placeholder="Valid" required="" type="text" value="Valid" /
                      .valid-feedback
                        i.bx.bx-radio-circle
                        | This is valid state.
                    .col-sm-6
                      label for="invalid-state"  Invalid State
                      input#invalid-state.form-control.is-invalid placeholder="Invalid" required="" type="text" value="Invalid" /
                      .invalid-feedback
                        i.bx.bx-radio-circle
                        | This is invalid state.
      section#tooltip-validation
        .row
          .col-12
            .card
              .card-header
                h4.card-title Input Validation States with Tooltips
              .card-content
                .card-body
                  p
                    | Use
                    code .needs-validation
                    | with
                    code &lt;form&gt;
                    | for Input Validation states with tooltip,
                    code . valid/invalid -feedback
                    | classes for
                    code . valid/invalid -tooltip
                    | classes to display validation feedback in a styled tooltip.
                  form.needs-validation novalidate="" 
                    .form-row
                      .col-md-4.mb-3
                        label for="validationTooltip01"  First name
                        input#validationTooltip01.form-control placeholder=("First name") required="" type="text" value="Mark" /
                        .valid-tooltip
                          | Looks good!
                      .col-md-4.mb-3
                        label for="validationTooltip02"  Last name
                        input#validationTooltip02.form-control placeholder=("Last name") required="" type="text" value="Otto" /
                        .valid-tooltip
                          | Looks good!
                      .col-md-4.mb-3
                        label for="validationTooltip03"  City
                        input#validationTooltip03.form-control placeholder="City" required="" type="text" /
                        .invalid-tooltip
                          | Please provide a valid city.
                    button.btn.btn-primary type="submit"  Submit
